---
import { Icon } from "astro-icon/components";

const { item } = Astro.props;
---

<li
    class="flex flex-col gap-y-2 md:flex-row md:items-center md:justify-between"
>
    <div class="flex items-center gap-x-2">
        <Icon class="hidden md:block md:shrink-0" name="university" />
        <div>
            <a class="font-medium" href="#" target="_blank" rel="noopener"
                >{item.title}</a
            >
            <p class="text-sm">{item.description}</p>
        </div>
    </div>
    <time class="text-xs">{item.date}</time>
</li>
